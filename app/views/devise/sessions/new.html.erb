<div class="container booyah-box">
  <div class="row">
    <div class="col-lg-6 col-md-12">
      <h2>Sign in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      class: "d-flex justify-content-start" %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "auth-links" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: "btn btn-outline-dark" %>
        </div>
      <% end %>
      <br>
      <span>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "auth-links" %></span>
    </div>
    <div class="col-lg-6 col-md-12">
      <%= image_tag 'auth-image', class: "auth-image" %>
    </div>
  </div>
</div>
