<div class="container">
  <div class="booyah-box">
    <h1><%= @place.name %></h1>
    <hr>
    <i><%= @place.address %></i>
    <br/><br/>
    <p><%= @place.description %></p>
    <% @place.photos.each do |photo| %>
        <div class="col-lg-12 col-sm-6">
          <blockquote class="photo-display">
            <%= image_tag photo.picture.to_s, class: 'show-image-size' %>
            <p><% if photo.caption.present? %>
              <%= photo.caption %></p>
            <% end %>
          </blockquote>
        </div>
      <% end %>
    <hr>
    <%= simple_form_for @photo, url: place_photos_path(@place) do |f| %>
      <%= f.input :caption, label: "Add an image caption..." %>
      <%= f.input :picture, label: "Add an image...", class: "picture-upload-button" %>
      <%= f.submit "Submit", class: 'btn btn-outline-info' %>
    <% end %>
    <div  class="float-right show-edit-destroy-btns">
      <% if current_user && current_user == @place.user %>
        <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-dark' %>
      <% end %>
      <%= link_to 'Destroy', place_path(@place),
        method: :delete,
        data: {confirm: 'Are you sure you want to delete this?'},
        class: 'btn btn-danger' %>
    </div>
  </div>
</div>